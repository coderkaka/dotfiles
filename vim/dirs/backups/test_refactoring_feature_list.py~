    (ret, out, err) = execute_local_cmd(cmd)
    #check result
    cmd = "curl -s 127.0.0.1//check_vip_reqstat | grep 50061"
    (ret, out, err) = slb_ops_ref.execute_remote_cmd(slb_ops_ref.get_proxy(), cmd)
    out = out.strip('\n').split(',')
