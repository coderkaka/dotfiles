#!/bin/sh
export temppath=$1
cd $temppath/rpm
RELS=$4
echo Release is : $RELS
REDHAT_RELEASE=`cat /etc/redhat-release|cut -d " " -f 7|sed y/./u/`
sed -i  "s/^Release.*$/Release: "$RELS".el"$REDHAT_RELEASE"/" t-coresystem-tengine-jushita.spec
VERSION=$3
sed -i  "s/^Version.*$/Version: "${VERSION}"/" t-coresystem-tengine-jushita.spec
sed -i "s/VERS/"${VERSION}"/g" t-coresystem-tengine-jushita.sh
echo ${VERSION} > t-coresystem-tengine-jushita-VER.txt
sh  t-coresystem-tengine-jushita.sh
rm -f *.src.rpm
